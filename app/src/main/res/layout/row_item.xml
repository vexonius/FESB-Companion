<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    tools:background="@color/colorPrimary">


    <RelativeLayout
        android:id="@+id/textBox"
        android:layout_width="20dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="#00c4ff"
        android:gravity="center"
        >


        </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELEKTRONIKA"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="8.15 - 11.00"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textStyle="normal"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp"/>

        <TextView
            android:id="@+id/seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/type"
            android:layout_below="@+id/name"
            android:text="·"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/vrstaPredavanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seperator"
            android:layout_below="@+id/name"
            android:text="Predavanje"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/seperator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vrstaPredavanja"
            android:layout_below="@+id/name"
            android:text="·"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/mjesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/seperator1"
            android:layout_below="@+id/name"
            android:text="A100"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp"/>
    </RelativeLayout>

</RelativeLayout>