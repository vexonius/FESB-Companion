<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_welcome_timetable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome1">

    <TextView
        android:id="@+id/welcomeTextTitleAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="Kava ili predavanje?"/>


    <ImageView
        android:id="@+id/welcome_image3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/welcomeTextTitleAttendance"
        android:layout_height="330dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fc_prisutnost"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/welcome_image3"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="Prati svoje izostanke i odluči se kada možeš na pauzu :)"/>

</RelativeLayout>