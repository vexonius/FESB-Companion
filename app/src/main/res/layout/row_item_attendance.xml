<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_grey"
    android:layout_margin="7dp"
    android:paddingBottom="10dp"
    android:elevation="6dp">

    <TextView
        android:id="@+id/predmetName"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="predmet"
        android:singleLine="true"
        android:layout_marginRight="12sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/predmetType"
        android:layout_below="@+id/predmetName"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auditorne vjeÅ¾be"
        android:textColor="@color/shady_blue"
        android:textSize="12dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/dolazakNum"
        android:layout_below="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/10"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textAlignment="center"
        />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_below="@+id/predmetType"
        android:layout_width="match_parent"
        android:layout_height="145dp" />



</RelativeLayout>