<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.doctoror.particlesdrawable.ParticlesView
            android:id="@+id/particles"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:minDotRadius="1dp"
            app:maxDotRadius="3dp"
            app:lineThickness="1dp"
            app:lineDistance="110dp"
            app:numDots="85"
            app:dotColor="@color/blue_nice"
            app:lineColor="@android:color/white"
            app:frameDelayMillis="10"
            app:stepMultiplier="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/myIcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fmebig"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="100dp"/>

            <EditText
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/myIcon"
                android:layout_marginRight="80dp"
                android:background="#cf2f3031"
                android:textColorHint="@color/_20white"
                android:singleLine="true"
                android:textColor="@color/white"
                android:padding="10dp"
                android:hint="FESB korisničko ime"/>

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/login_text"
                android:layout_marginRight="80dp"
                android:background="#cf2f3031"
                android:textColorHint="@color/_20white"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:padding="10dp"
                android:hint="Lozinka"/>

            <FrameLayout
                android:id="@+id/framebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/login_pass"
                android:layout_marginRight="80dp" >

                <ProgressBar
                    android:id="@+id/progress_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:progressTint="@color/white"
                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                     android:visibility="invisible"
                    />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:text="Prijava" />

            </FrameLayout>

            <TextView
                android:id="@+id/login_pomoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/framebutton"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:clickable="true"
                android:textSize="11dp"
                android:text="Pomoć"/>
        </RelativeLayout>
    </FrameLayout>



</RelativeLayout>