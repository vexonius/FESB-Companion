<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:text="Kolegij"
        android:gravity="start"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/predavanjeImeDialog"
        android:textSize="24dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/classPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/classroom"
        android:layout_below="@+id/predavanjeImeDialog"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:text="Predavanje"
        android:gravity="start"
        android:layout_toRightOf="@+id/classPic"
        android:layout_below="@+id/predavanjeImeDialog"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/opisPredavanja"
        android:textSize="14dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal" />



    <ImageView
        android:id="@+id/profPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/profesor"
        android:layout_below="@+id/classPic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:text="Profesor"
        android:gravity="start"
        android:layout_below="@+id/opisPredavanja"
        android:layout_toRightOf="@+id/profPic"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/text_ispod2"
        android:textSize="14dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/timePic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/time"
        android:layout_below="@+id/profPic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:text="Vrijeme odrÅ¾avanja"
        android:gravity="start"
        android:layout_below="@+id/text_ispod2"
        android:layout_toRightOf="@+id/timePic"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/text_ispod3"
        android:textSize="14dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/groupPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/group"
        android:layout_below="@+id/timePic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:text="Grupa"
        android:gravity="start"
        android:layout_below="@+id/text_ispod3"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/groupPic"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/text_ispod4"
        android:textSize="14dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/mjestoPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/mjesto_odrzavanja"
        android:layout_below="@+id/groupPic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:text="Lokacija"
        android:gravity="start"
        android:layout_below="@+id/text_ispod4"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/mjestoPic"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/text_ispod5"
        android:textSize="14dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal"/>

</RelativeLayout>