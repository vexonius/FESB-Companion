<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meni_item_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="2dp"
    android:stateListAnimator="@animator/lift_on_touch"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/meni_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        />

    <TextView
        android:id="@+id/meni_jelo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        android:layout_below="@+id/meni_title"
        />

    <TextView
        android:id="@+id/meni_jelo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        android:layout_below="@+id/meni_jelo1"
        />

    <TextView
        android:id="@+id/meni_jelo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        android:layout_below="@+id/meni_jelo2"
        />

    <TextView
        android:id="@+id/meni_jelo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        android:layout_below="@+id/meni_jelo3"
        />

    <TextView
        android:id="@+id/meni_jelo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="MENI 1"
        android:layout_below="@+id/meni_jelo4"
        />

    <TextView
        android:id="@+id/meni_cijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="@color/welcome2"
        android:layout_alignParentRight="true"
        android:text="4,99 kn"
        android:layout_below="@+id/meni_jelo5"
        />

</RelativeLayout>

