<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_course_weel_item"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

   <TextView
       android:id="@+id/tjedanText"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="25dp"
       android:paddingTop="15dp"
       android:paddingBottom="5dp"
       android:paddingRight="25dp"
       android:textSize="14dp"
       android:text="Tjedan"
       android:textAlignment="viewEnd"
       android:textColor="@color/blue_nice"/>

    <TextView
        android:id="@+id/tjedanOpis"
        android:layout_below="@+id/tjedanText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:text="Ovo je opis tjedne aktivnosti"
        android:textColor="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mat_recyc"
        android:layout_below="@id/tjedanOpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>