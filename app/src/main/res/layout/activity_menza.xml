<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome2"
    tools:context="com.tstudioz.fax.fme.activities.MenzaActivity"
    android:paddingBottom="@dimen/bsp_month_navigation_bar_height">

    <TextView
        android:id="@+id/menza_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="MENZA "
        android:textSize="60dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menza_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menza_title"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
